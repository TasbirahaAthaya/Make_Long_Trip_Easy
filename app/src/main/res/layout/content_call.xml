<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sharna.navigation.About"
    tools:showIn="@layout/activity_call"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Call Shohoz.com for Ticket booking"

        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="15sp"
        android:padding="5dp"

        android:textColor="#000"
        android:textStyle="bold|italic"

        android:layout_marginBottom="20dp"
        />
    <Button

        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/f1"
        android:gravity="center"
        android:onClick="call"
        android:text="  16374"
        android:textStyle="bold|italic"
        android:textSize="40sp"
        android:layout_margin="4dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Go the website for Ticket booking"

        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="15sp"


        android:textColor="#000"
        android:textStyle="bold|italic"
        android:padding="5dp"
        android:layout_marginBottom="20dp"
        />




    <Button

        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/f2"
        android:gravity="center"
        android:onClick="web"
        android:layout_margin="4dp"
        android:layout_marginLeft="10dp"
        android:text="Ticket Booking\nwebsite"
        android:textStyle="bold|italic"
        android:textSize="25sp"



        android:layout_marginTop="100dp"
        android:layout_weight="0.07" />


</LinearLayout>
